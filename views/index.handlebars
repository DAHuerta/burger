<div class="container">
	<div class="jumbotron">
		<img src= https://d1bjorv296jxfn.cloudfront.net/s3fs-public/styles/recipes_header_image/public/SRG_EasyBake_Cheeseburger_95215_copy.jpg?itok=FdVkkn7w>
		<h1>Burgers!</h1>
	</div>
	

	<div class="burgerContainer">

	<div class="col-md-4 col-md-offset-1">

	 	<h1>Burgers Left To Eat!</h1>
	 	<ul class="list-group">
	 		{{#each burgers}}
	 		 {{#unless this.devoured}}
	 		 <li class="list-group-item">
	 		  <div class="input-group">
	 		  	<p class="lead">{{this.burger_name}}</p>
	 		  	<span class="input-group-btn">
					   
	 		  		<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
	 		  			<input type="hidden" name="devoured" value="true">
	 		  			<button class="btn btn-default btn-lg devour" data-value="{{this.id}}" data-devouredstate="{{devoured}}" type="submit">Devour it!</button>
	 		  		</form>

	 		  	</span>
	 		  </div>
	 		 </li>
	 		 {{/unless}}
	 		{{/each}}
	 	</ul>

	</div>

	
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
        <h1>Burgers Devoured</h1>
        <div class="panel panel-default">
            <ul class="list-group">
                {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="list-group-item">
                    <p class="lead">{{this.burger_name}}</p>
                    </li>
                    {{/if}}
                    {{/each}}
            </ul>
        </div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1 addBurger">
		<p class="lead">Add Burger</p>
		
		<form class="create-update-form" action="burgers/create" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
		 </div>
		 <button class="btn btn-default btn-lg" type="submit">Submit</button>
		</form>
	</div>

 </div>
</div>